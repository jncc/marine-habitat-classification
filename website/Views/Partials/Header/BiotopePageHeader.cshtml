@using System.Text.RegularExpressions
@using website.Models
@inherits UmbracoViewPage<BiotopeModel>
@{
    var biotopeName = Regex.Replace(Model.Biotope.FullTerm, "<.*?>", String.Empty);
    var biotopeDescription = Regex.Replace(Model.Biotope.Description, "<.*?>", String.Empty);
}
<meta name="description" content="@biotopeDescription">
<title>@biotopeName - JNCC @Umbraco.TypedContentAtRoot().FirstOrDefault().Name</title>